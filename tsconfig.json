{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    },
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "strict": false,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "./globals.d.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
    }
  }
}
